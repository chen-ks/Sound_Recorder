<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9D9D9">
        <Button
            android:id="@+id/DialogDelete_Ok"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="click it to delete"
            android:background="@drawable/menutile"/>
        <Button
            android:id="@+id/DialogShare_Ok"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="click it to share"
            android:background="@drawable/menutile"/>
        <Button
            android:id="@+id/DialogLoad_Ok"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="click it to upload"
            android:background="@drawable/menutile"/>

        <Button
            android:id="@+id/DialogDelete_Cancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="cancel"
            android:background="@drawable/menutile"/>
</LinearLayout>
